// launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "run bundle",
      "program": "${workspaceFolder}/tasks.json",
      "request": "launch",
      "preLaunchTask": "run bundle",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },

    {"name": "Rails Server",
    "type": "node",
    "request": "launch",
    "preLaunchTask": "run bundle"},
    
    {
      "name": "Rails Server",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "run ruby"
    },
    {
      "name": "Webpack Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "StartWebpackServer"
    },
    {
      "name": "Chrome against localhost:3000",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/app"
    }
  ]
}