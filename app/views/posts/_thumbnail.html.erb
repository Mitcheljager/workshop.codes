<% tabindex = tabindex == 0 ? nil : -1 %>

<% image = url_for_post_thumbnail(post) %>
<% image_large = url_for_post_thumbnail(post, 240, 128, "medium") %>

<%= link_to post_path(post.code), class: "item__thumbnail", tabindex: tabindex, aria: { hidden: tabindex == -1 ? "true" : nil } do %>
  <%= image_tag image,
    srcset: "#{ image } 1x, #{ image_large } 2x",
    alt: post.title,
    width: 120,
    height: 68,
    loading: "lazy" %>
<% end %>
