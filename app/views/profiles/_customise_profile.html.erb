<div class="fixed-box">
  <%= link_to "← Customise your profile", edit_profile_path, class: "button button--secondary w-100" %>

  <% if current_user.verified? %>
    <hr>

    <%= form_for current_user, url: update_profile_path, remote: true do |form| %>
      <div class="form-group">
        <%= form.label :custom_css, class: "form-label" do %>
          Custom CSS
          <%= inline_svg_tag "icons/verified.svg", class: "profile-banner__verified" %>
        <% end %>

        <div data-toggle-content>
          <small>
            <a href="#"
              class="text-lightest"
              data-action="toggle-content"
              data-show-with="Hide CSS editor"
              data-hide-with="Show CSS editor"
              aria-expanded="false"
              aria-controls="custom-css">Show CSS editor</a>
          </small>

          <div data-role="content-to-toggle" id="custom-css" style="display: none">
            <div class="form-hint">
              You're verified, which means you get to add some extra styling to your profile. Be respectful with your styling. Don't hide anything that isn't yours. Don't alter text that isn't yours. Don't go overboard. Misuse may result in your verified status being removed.
            </div>

            <%= form.text_area :custom_css, class: "form-input form-textarea form-textarea--extra-small", data: { action: "apply-custom-css" }, autocomplete: "off" %>

            <%= submit_tag "Save", class: "button button--small mt-1/4", data: { disable_with: "Saving..." } %>
          </div>

        </div>
      </div>

    <% end %>
  <% end %>
</div>
