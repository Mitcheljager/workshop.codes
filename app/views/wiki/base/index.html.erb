<% content_for :page_title, "Overwatch Workshop Wiki" %>

<div class="logo-background logo-background--overwatch">
  <%= render "arbiter_banner" if current_user.present? %>
  <%= render "application/banners/discord" %>
</div>

<div class="wiki-cards mt-1/1">
  <div class="wiki-card">
    <h3 aria-level="2" class="mt-0">Wiki categories</h3>
    <%= render @categories.where(is_documentation: false) %>

    <h3 aria-level="2" class="mt-1/2">Workshop documentation</h3>
    <%= render @categories.where(is_documentation: true) %>
  </div>

  <div class="wiki-card">
    <h3 aria-level="2" class="mt-1/2 md:mt-0">Latest changes</h3>

    <% @edits.each do |edit| %>
      <div class="wiki-card__item">
        <%= link_to edit.user.username, user_path(edit.user.username) %> <%= edit.content_type %> <%= link_to edit.article.title, wiki_article_path(edit.article.slug) %>
      </div>
    <% end %>

    <%= link_to "View all changes", wiki_edits_path, class: "button button--link" %>
  </div>
</div>
