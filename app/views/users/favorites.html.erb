<% content_for :page_title, "Favorites" %>

<%= render "layouts/account", title: "Favorites" do %>
  <% @favorites.each do |favorite| %>
    <%= render "posts/post", post: favorite.post %>
  <% end %>

  <%= tag.em "You've not yet favorited any codes" if @favorites.blank? %>

  <%= paginate @favorites, window: 2 %>
<% end %>
